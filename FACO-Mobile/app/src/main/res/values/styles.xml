<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="FacoHeaderOneTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textHeaderOne</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="FacoHeaderTwoTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textHeaderTwo</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="FacoSubtitleTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textSubtitle</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="FacoBodyTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textBody</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="FacoBodyBoldTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textBody</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="FacoCaptionMenuTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textCaptionMenu</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="PrimaryActionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
        <item name="android:paddingLeft">47dp</item>
        <item name="android:paddingRight">47dp</item>
    </style>

    <style name="AuthInputFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/auth_input_field_background</item>
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:textColor">@color/colorTextBodyGrey</item>
        <item name="android:textSize">@dimen/input_field_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorTextAccentLight</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:hint">@null</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="CustomFilePickerStyle">
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/auth_input_field_background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
</resources>
